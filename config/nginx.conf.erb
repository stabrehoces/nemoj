server {
  listen 80;
  server_name _;

  # Set the root to the 'index' folder
  root /index;

  # Route all requests to index.html inside the 'index' folder
  location / {
    try_files $uri $uri/ /index.html;
  }

  # Optional: Handle 404 error with a custom 404 page
  error_page 404 /404.html;
  location = /404.html {
    root /;
  }
}
